<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>semedico</artifactId>
	<packaging>pom</packaging>
	<name>Semedico</name>
	<description>The Semedico parent POM for all projects associated with Semedico (like semedico-core, semedico-frontend and semedico-tools; there might be more in the future).</description>
	<properties>
		<tapestry-release-version>5.3.6</tapestry-release-version>
		<semedico-version>1.8.0-SNAPSHOT</semedico-version>
		<logback-classic-version>1.0.0</logback-classic-version>
	</properties>
	<!-- The modules section is just given for an overview of maven projects 
		associated with Semedico. It does not have any function for Semedico development 
		purposes. -->
	
	<modules>
		<module>../semedico-core</module>
		<module>../semedico-frontend</module>
		<module>../stemnet-tools</module>
<!-- 		<module>../semedico-app</module> -->
	</modules>
	
	<parent>
		<groupId>de.julielab</groupId>
		<artifactId>julie</artifactId>
		<version>1.2.0</version>
	</parent>
	<version>1.8.0-SNAPSHOT</version>
	<dependencies>
		<dependency>
			<groupId>org.apache.tapestry</groupId>
			<artifactId>tapestry-hibernate</artifactId>
			<version>${tapestry-release-version}</version>
			<exclusions>
				<exclusion>
					<artifactId>log4j</artifactId>
					<groupId>log4j</groupId>
				</exclusion>
				<exclusion>
					<artifactId>slf4j-log4j12</artifactId>
					<groupId>org.slf4j</groupId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>
</project>
