<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{80} - %msg%n</pattern>
    </encoder>
  </appender>
  
  <logger name="uk.ac.manchester.cs.owl.owlapi.OWLDataFactoryInternalsImpl" level="ERROR" />
  <logger name="org.obolibrary.oboformat.parser.OBOFormatParser" level="ERROR" />
  <logger name="org.openrdf.rio" level="ERROR" />
  <logger name="org.xml.sax.XMLReader" level="ERROR" />
  <logger name="org.semanticweb.owlapi" level="ERROR" />
  
  <root level="DEBUG" >
    <appender-ref ref="STDOUT" />
  </root>
</configuration>