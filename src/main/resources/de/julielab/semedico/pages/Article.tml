<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
   "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<title>Semedico - search PubMed</title>
		<link href="${context:css/styles.css}" rel="stylesheet" type="text/css" />
		<style type="text/css">@import url(${context:/css/layout_hitlist.css}) all;</style>
		<style type="text/css">@import url(${context:/css/facets.css}) all;</style>
	</head>

	<body>
		<!--
			[if IE 7]> <link href="${context:css/layout_hitlist.css}" rel="stylesheet"
			type="text/css"/> <link href="${context:css/facets.css}" rel="stylesheet"
			type="text/css"/> <link href="${context:css/ie_hacks.css}" rel="stylesheet"
			type="text/css"/> <![endif]
		-->
		<!--
			[if lte IE 6]> <link href="${context:css/layout_hitlist_ie6.css}"
			rel="stylesheet" type="text/css"> <link href="${context:css/facets_ie6.css}"
			rel="stylesheet" type="text/css"> <![endif]
		-->

		<div id="resultBar">

		</div>
		
		<div id="columnsContainer">
		
			<div id="leftColumn">
				<div id="logoContainer">
					<t:pagelink page="Index">
						<img border="0" src="${context:images/logo_small.png}" width="250"
							height="66" id="logo"/>
					</t:pagelink>
				</div>
				<t:tabs facetConfigurations="searchConfiguration.facetConfigurations"
					documents="documents" selectedTerm="selectedTerm"
					selectedFacetType="selectedFacetType"
					currentTabFacetHits="currentFacetHits"
					showLabelCount="false" />				
			</div>		
	
			<div id="rightColumn">
				<t:form t:id="search">
					<div id="searchPanelDiv">
						<div id="searchInputDiv">
							<t:textfield value="query" maxlength="56" type="text"
								autocomplete="off" query="query" termText="query" clickedTermId="termId"
								t:mixins="FacetSuggestionHitAutocomplete" t:id="searchInputField" />
							<div id="searchPanelDescription">Select a term to search for synonyms and related
								terms. Press ESC to ignore suggestions.</div>
						</div>
						<div id="searchButtonDiv">
							<input type="image" src="${context:images/btn_search.png}" />
						</div>
					</div>
					<div style="clear: both;"></div>
				</t:form>
				<div id="resultPanel">
				</div>
				<t:querypanel queryTerms="searchConfiguration.queryTerms"
					sortCriterium="searchConfiguration.sortCriterium"
					facetConfigurations="searchConfiguration.facetConfigurations"
					reviewsFiltered="searchConfiguration.reviewsFiltered" 
					spellingCorrections="spellingCorrections"
				    spellingCorrectedQueryTerms="spellingCorrectedQueryTerms"/>
				    
				<div id="articleDetail">
					<div id="publicationDetails">
						<span id="publicationTitle">${article.publication.title}</span>.  
						<span  t:type="output" format="dateFormat" value="article.publication.date">11/2006</span>;
						${article.publication.volume}
						<span t:type="if" test="article.publication.issue">
							(${article.publication.issue}) 
						</span>:
						${article.publication.pages}
					</div>		
					<div id="articleTitle" renderTag="true" raw="true" value="ognl:highlightedTitle">
						<t:outputraw value="highlightedTitle"/>
					</div>
					<div id="articleAuthors">
						<span t:type="loop" source="article.authors" value="authorItem" index="authorIndex">
							${authorItem.lastname}  ${authorItem.forename} <span t:type="if" test="isNotLastAuthor()" >,</span>
						</span>
					</div>
					<div id="articleText">
						<t:outputraw value="highlightedAbstractText"/>
					</div>
		
					<div id="pubmedContainer">

						<div id="pubmedLinkPanel">
							<a id="pubmedLink" t:type="any" target="_blank" href="prop:pubmedURL">This article in PubMed</a>
						</div>

						<div id="pubmedId">
							PubMed ID: ${article.pubMedId}
						</div>
					
					</div>
					<span t:type="if" test="hasFulltextLinks()">
						<div id="externalLinks">
						<div style="margin-bottom:5px;">Article available at</div>
							<span t:type="loop" source="article.externalLinks" value="externalLinkItem">
								<a t:type="any" href="prop:externalLinkItem.url" target="_top">
									<img border="0" t:type="any" src="prop:externalLinkItem.iconUrl"/></a>
							</span>
						</div>
					</span>	
					<span t:type="if" test="hasRelatedArticles()">
						<div id="relatedArticles">
						<div>Related Articles</div>
							<ul>
								<li t:type="loop" source="article.relatedArticles" value="relatedArticleItem" class="related">
									<span t:type="if" test="relatedArticleItem.review" class="reviewMarker" title="Review">REVIEW</span>
										<t:pagelink page="Article" context="relatedArticleItem.pubmedId">
											${relatedArticleItem.title}
										</t:pagelink>
										${relatedArticleItem.publication.title},
										<span t:type="output" format="dateFormat" value="relatedArticleItem.publication.date"></span>
								</li>
							</ul>
						</div>
					</span>
				</div>
				<div id="backLinkPanel">
					<a t:type="pagelink" page="Hits"><img border="0" src="${context:images/btn_back.png}"/></a>
				</div>
			</div>
		</div>		
		</body>
</html>