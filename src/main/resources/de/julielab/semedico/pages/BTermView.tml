<html t:type="btermviewlayout" uiState="uiState" selectedBTerm="selectedBTerm"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">


	<t:if t:test="selectedBTerm">
		<t:btermquerypanel selectedBTerm="selectedBTerm" />
		<div style="float:left;border-right:1px solid #adc1d9;margin:1em 0px;padding-right:1em;">
			<t:documentList displayGroup="displayGroup1"
				searchNodeIndex="0" maxNumberHighlights="maxNumberHighlights1"
				btermQuery="true" emptyMessage="${message:empty_result}" />
		</div>
		<div
			style="float:left;border-left:1px solid #adc1d9;margin:1em 0;margin-left:-1px;padding-left:1em">
			<t:documentList displayGroup="displayGroup2"
				searchNodeIndex="1" maxNumberHighlights="maxNumberHighlights2"
				btermQuery="true" emptyMessage="${message:empty_result}" />
		</div>
		<p:else>
			<div class="emptyResult" style="text-align:center">${message:empty_result}</div>
		</p:else>
	</t:if>

</html>