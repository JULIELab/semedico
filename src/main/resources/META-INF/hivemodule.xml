<?xml version="1.0" encoding="UTF-8"?>

<module id="semedico.core" version="1.0.0">
	<service-point id="TermSuggestionService" interface="de.julielab.semedico.suggestions.ITermSuggestionService">	
		<invoke-factory	model="pooled">
			<construct class="de.julielab.semedico.suggestions.TermSuggestionService">
			  	<service>SuggestionIndexReader</service>
			  	<set property="maxTokenLength" value="7"/>
			  	<set property="minTokenLength" value="2"/>
			  	<set-service property="termService" service-id="semedico.core.TermService"/>
			</construct>
		</invoke-factory>
	</service-point>
	
	<service-point id="FacetHitCollectorService" interface="de.julielab.semedico.search.IFacetHitCollectorService">	
		<invoke-factory	model="pooled">
			<construct class="de.julielab.semedico.search.FacetHitCollectorService">
				<service>semedico.core.TermService</service>
				<service>semedico.core.FacetService</service>
				<service>semedico.core.LabelCacheService</service>
			</construct>
		</invoke-factory>
	</service-point>
	
