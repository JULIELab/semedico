			<set-service property="searcher" service-id="SolrServer"></set-service>
			</construct>
		</invoke-factory>
	</service-point>
 
 
	<service-point id="QueryTranslationService" interface="de.julielab.semedico.query.IQueryTranslationService">	
		<invoke-factory	model="pooled">
			<construct class="de.julielab.semedico.query.QueryTranslationService">
