	<service-point id="TermFileReaderService" interface="de.julielab.semedico.core.services.ITermFileReaderService">	
		<invoke-factory	model="pooled">
			<construct class="de.julielab.semedico.core.services.TermFileReaderService">
				<service>FacetService</service>
				<string>${semedico.import.termFile}</string>
			</construct>
		</invoke-factory>
	</service-point>

	<service-point id="DocumentCacheService" interface="de.julielab.semedico.core.services.IDocumentCacheService">	
		<invoke-factory	model="pooled">
			<construct class="de.julielab.semedico.core.services.DocumentCacheService"/>
		</invoke-factory>
	</service-point>

	<service-point id="LabelCacheService" interface="de.julielab.semedico.search.ILabelCacheService">	
		<invoke-factory	model="pooled">
			<construct class="de.julielab.semedico.search.LabelCacheService"/>
		</invoke-factory>
	</service-point>
			
	<service-point id="DocumentSetLimitizerService" interface="de.julielab.semedico.search.IDocumentSetLimitizerService">	
		<invoke-factory	model="pooled">
			<construct class="de.julielab.semedico.search.DocumentSetLimitizerService"/>
		</invoke-factory>
	</service-point>
	
	<service-point id="FacettedSearchService" interface="de.julielab.semedico.search.IFacettedSearchService">	
		<invoke-factory	model="pooled">
			<construct class="de.julielab.semedico.search.FacettedSearchService">
				<int>${semedico.core.search.maxFacettedDocuments}</int>
				<int>${semedico.core.search.maxNumberOfDocumentHits}</int>
				<set-service property="searcher" service-id="SolrServer"></set-service>
			</construct>
		</invoke-factory>
	</service-point>
	
	<contribution configuration-id="hivemind.FactoryDefaults">
		<default symbol="semedico.database.maxConnections" value="10"/>
		<default symbol="semedico.database.initialConnections" value="1"/>
		<default symbol="semedico.database.portNumber" value="5432"/>
		<default symbol="semedico.terms.loadTermsAtStartUp" value="false"/>
	</contribution>
	
	<contribution configuration-id="hivemind.SymbolSources">
		<source name="properties-file" class="de.julielab.hivemind.PropertiesFileSymbolSource"/>
	</contribution>
</module>

