		</invoke-factory>
	</service-point>
	
	<service-point id="FacetService" interface="de.julielab.semedico.core.services.IFacetService">	
		<invoke-factory	model="pooled">
			<construct class="de.julielab.semedico.core.services.FacetService">
				<service>Connection</service>
			</construct>
		</invoke-factory>
	</service-point>
	
	<service-point id="ExternalLinkService" interface="de.julielab.semedico.core.services.IExternalLinkService">	
		<invoke-factory	model="pooled">
			<construct class="de.julielab.semedico.core.services.ExternalLinkService"/>
		</invoke-factory>
	</service-point>

	<service-point id="RelatedArticlesService" interface="de.julielab.semedico.core.services.IRelatedArticlesService">	
		<invoke-factory	model="pooled">
